{
  "manifest_version": 3,
  "name": "ads.txt & app-ads.txt Checker",
  "version": "3.5.0",
  "description": "View and filter ads.txt / app-ads.txt files. Automatically matches adWMG sellers.",
  "icons": {
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "adWMG Checker"
  }
}