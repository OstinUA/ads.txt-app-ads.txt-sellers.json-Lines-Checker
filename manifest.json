{
  "manifest_version": 3,
  "name": "adWMG ads.txt Checker",
  "version": "2.1",
  "description": "Check for ads.txt and app-ads.txt files, detect adWMG lines, and match seller_id with sellers.json.",
  "permissions": ["tabs", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "adWMG Checker",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
