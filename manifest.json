{
  "manifest_version": 3,
  "name": "ads.txt & app-ads.txt Viewer + Seller Checker",
  "version": "1.4.2",
  "description": "View and filter ads.txt / app-ads.txt files. Automatically matches adWMG sellers.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ads.txt Viewer"
  }
}
